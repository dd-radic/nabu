{
  "version": "2.0.0",
  "tasks": [
    /*
          THIS IS THE SHORTCUT FOR LAUNCHING NABU LOCALLY
          USE BUILD BUTTON TO LAUNCH NABU 
          (BY DEFAULT THATS THE LITTLE HAMMER ICON IN THE UI
          OR CTRL+SHIFT+B ON THE KEYBOARD)
          TODO: ADD ADITIONAL SHORTCUTS
    */
    {
      "label": "Setup Nabu Server",
      "type": "shell",
      "command": "cd '${workspaceFolder}/nabu/server/src'; npm install; node --inspect server.js",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Setup Nabu Client",
      "type": "shell",
      "command": "cd '${workspaceFolder}/nabu/client'; npm install; npm start",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Start Nabu",
      "dependsOn": ["Setup Nabu Server", "Setup Nabu Client"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true,
      }
    },
  ]
}
